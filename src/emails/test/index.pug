extends ../../layout/main.pug
block variables
    -var title ="Offer email"
block styles
    style.
        @media only screen and (max-width: 600px) {
            *[class].w240{
                width: 240px !important;
            }
            *[class].w480{
                width: 480px !important;
            }
            *[class].h60{
                height: 60px !important;
            }
            *[class].h30{
                height: 30px !important;
            }
            *[class].p0{
                padding: 0px !important;
            }
        }
block content
    //- Content handle variables
    - var title = `New Offer Email`
    - var subTitle = `some example text`
    - var bOffer = `Best offers`
    - var bOffertext = `We have the best offers for you!`
    - var phone = `Phone: +1 999 999 999`
    - var contact = `Contact us`
    - var latest= `Latest Offer`
    - var latestText = `Get our last offer in our site`
    - var visit = `"Visit offers site"`

    table(width='600' class="w480")&attributes(tableAtt)
        +vSpacer(10)
        //- instead of tr > td> img spacer, use mixin for Vertical Spacer
        //-img(src='https://spacergif.org/spacer.gif' height="10px")
        tr
            td(width='600' style=`background: ${mainColor}; padding:10px;` class="w480")&attributes(tdCenter)
                span(style=`color:${whiteText};font-size: 21px;font-weight: bold;display: block;`) #{title}
                span(style=`color:${whiteText}; margin:0px;`) #{subTitle}

    table(width='600' style="color: white;background: #657084" class="w480")&attributes(tableAtt)
        tr
            td(width='600')&attributes(tdCenter)
                +addImg("http://lorempixel.com/600/200","Img main")(class="w480" width='600')
                //- instead of this use addImg mixin that handle issues cross email clients.
                //- img(src="http://lorempixel.com/600/200" alt="img" class="w480" width='600')
    table(width='600' style="color: white;background: #657084" class="w480")&attributes(tableAtt)
        tr
            td(width="300" height="80" style="padding:15px 0px 0px 0px;" class="blockwrap h60 ")&attributes(tdCenter)
                span(style=`color:${whiteText};font-size: 21px;font-weight: bold;display: block;`) #{bOffer}
                span  #{bOffertext}
            td(width='300' height="80" style="padding:15px 0px 0px 0px; " class="blockwrap h60 p0")&attributes(tdCenter)
                span(style=`color:${whiteText};font-size: 21px;font-weight: bold;display: block;`) #{contact}
                span #{phone}
    table(width='600' style=`color: white;background: ${gray}` class="w480")&attributes(tableAtt)
        tr
            td(width="300" height="80"  style="padding:15px 0px 0px 0px;")&attributes(tdCenter)
                span(style=`color:${whiteText};font-size: 21px;font-weight: bold;display: block;`)  #{latest}
                span(style=`margin:0px; padding:5px;`) #{latestText}
                +spacer({height:25})
                +button({width:205, height:35, bgcolor:'#4285f4',bordercolor:'#4285f4', radius:4, text: 'Read More'})
                +spacer({height:25})
        tr
            +tdbackground({img:'http://lorempixel.com/600/100/', width:600, height:100})&attributes(tdCenter)
                +spacer({height:25})
                span(style=`color:${whiteText};font-size: 21px;font-weight: bold;display: block;`)  #{visit}
    include ../../includes/modules/footer.pug

